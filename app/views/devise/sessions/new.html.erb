<div class="login-wrapper">
  <div class="container">
    <div class="row">
      <div class="d-none d-md-block col-2">
      </div>
      <div class="blue col-12 col-md-8">
        <div class="login-card">
          <h2>Log in</h2>
          <br>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
              <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "primary-button full-width" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="d-none d-md-block col-2">
      </div>
    </div>
  </div>
  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
